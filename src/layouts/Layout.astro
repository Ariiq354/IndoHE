---
import "../assets/css/main.css";
import Footer from "./Footer.astro";
import Topbar from "./Topbar.astro";
import WhatsappIcon from "../assets/WhatsappIcon.astro";
import "@fontsource/questrial";

import { ClientRouter } from "astro:transitions";
const { title = "default" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Topbar />
    <main>
      <slot />
    </main>
    <Footer />
    <a
      class="fixed right-10 bottom-10 flex items-center justify-center rounded-xl bg-blue-900 p-2 text-white"
      href="https://wa.me/6289605834601"
      target="_blank"
    >
      <WhatsappIcon />
    </a>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    font-family: "Questrial", sans-serif;
  }
</style>
