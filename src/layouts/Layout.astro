---
import "@/assets/css/main.css";
import Footer from "./Footer.astro";
import Topbar from "./Topbar.astro";
import WhatsappIcon from "@/assets/WhatsappIcon.astro";
import "@fontsource/questrial";
import { getLangFromUrl } from "@/lib/i8n.ts";

const lang = getLangFromUrl(Astro.url);

import { ClientRouter } from "astro:transitions";
const { title = "default" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Indonesia Higher Learning Hub" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Topbar />
    <main>
      <slot />
    </main>
    <Footer />
    <a
      class="fixed right-5 bottom-5 flex items-center justify-center rounded-xl bg-blue-900 p-2 text-white md:right-10 md:bottom-10"
      href="https://wa.me/6281286168584"
      target="_blank"
      aria-label="Whatsapp"
    >
      <WhatsappIcon />
    </a>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    font-family: "Questrial", sans-serif;
  }
</style>
