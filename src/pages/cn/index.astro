---
import Book from "@/assets/Book.astro";
import HomeForm from "@/components/HomeForm.vue";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Home">
  <div class="h-[500px] w-full bg-[url('/student.webp')] bg-cover bg-center">
  </div>
  <div class="container my-12 flex flex-col gap-4 md:text-lg">
    <div>
      <h1 class="text-center text-3xl font-bold text-red-500">我们是谁</h1>
